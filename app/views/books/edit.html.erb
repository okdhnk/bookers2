<div>
  <%= flash[:notice] %>
</div>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>



<h1 class="mt-3">Editing Book</h1>
      <%= form_with model: @book do |f| %>

        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"タイトル"%>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_field :body, autofocus: true, id:"inputBody", placeholder:"感想"%>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book" %>
        </div>
      <% end %>


      <%= link_to "Show", book_path(@book) %>
      <%= link_to "Back", books_path %>
    </div>